---
const projects = [
  {
    title: 'CI/CD Pipeline with Jenkins',
    description: 'Set up a Jenkins pipeline to automate the deployment of a sample application to AWS EC2.',
    link: '#',
    icon: 'ph-git-fork'
  },
  {
    title: 'Dockerized Web Application',
    description: 'Containerized a Node.js application and set up Docker Compose for multi-container deployments.',
    link: '#',
    icon: 'ph-cube'
  }
];
---
<section id="projects" class="box">
  <h2>Projects</h2>
  <div class="projects-grid">
    {projects.map(project => (
      <a href={project.link} class="project-card">
        <div class="project-icon">
          <i class={project.icon}></i>
        </div>
        <h3>{project.title}</h3>
        <p>{project.description}</p>
      </a>
    ))}
  </div>
</section>

<style>
  section {
    padding: 2rem;
    margin: 2rem 0;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 16px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  h2 {
    color: #111827;
    font-size: 1.875rem;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .project-card {
    padding: 1.5rem;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px -2px rgba(0, 0, 0, 0.1);
  }

  .project-icon {
    font-size: 2rem;
    color: #3245ff;
    margin-bottom: 0.5rem;
  }

  h3 {
    color: #111827;
    font-size: 1.25rem;
    margin: 0;
  }

  p {
    color: #6b7280;
    line-height: 1.5;
    margin: 0;
  }
</style>