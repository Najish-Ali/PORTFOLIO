---
interface Props {
  title?: string;
}

const { title = "Your Name - DevOps Engineer" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content="DevOps Engineer Portfolio - Automation, Cloud Computing, and CI/CD specialist" />
    <link rel="stylesheet" href="https://unpkg.com/@phosphor-icons/web@2.0.3/src/bold/style.css" />
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.4/dist/aos.css" />
    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js" is:inline></script>
  </head>
  <body>
    <slot />
    <script is:inline>
      AOS.init({
        duration: 800,
        once: true,
        offset: 100
      });
    </script>
  </body>
</html>

<style is:global>
  :root {
    --accent: 62, 69, 255;
    --gradient-start: #3245ff;
    --gradient-end: #bc52ee;
  }
  
  html {
    font-family: system-ui, sans-serif;
    background: #f6f6f6;
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
  }

  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
      Bitstream Vera Sans Mono, Courier New, monospace;
  }

  .box {
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .box:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px -2px rgba(0, 0, 0, 0.1);
  }

  .gradient-text {
    background: linear-gradient(to right, var(--gradient-start), var(--gradient-end));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>